{
  "name": "inventory-dashboard-backend",
  "version": "1.0.0",
  "description": "Backend API for inventory dashboard",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=test.ts",
    "test:performance": "jest --testPathPattern=performance",
    "test:all": "ts-node src/__tests__/testRunner.ts",
    "test:setup": "ts-node src/test-setup.ts",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:test": "NODE_ENV=test knex migrate:latest",
    "seed": "knex seed:run",
    "seed:test": "NODE_ENV=test knex seed:run",
    "docs:generate": "swagger-jsdoc -d src/docs/swagger.yaml -o src/docs/swagger.json src/routes/*.ts",
    "docs:serve": "swagger-ui-serve src/docs/swagger.yaml"
  },
  "dependencies": {
    "@types/redis": "^4.0.10",
    "@types/uuid": "^10.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "redis": "^5.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^2.0.15",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "inventory",
    "dashboard",
    "api"
  ],
  "author": "",
  "license": "MIT"
}
